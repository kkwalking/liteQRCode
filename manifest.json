{
    "manifest_version": 3,
    "name": "网页二维码生成器",
    "version": "1.0",
    "description": "1. 生成当前网页的二维码并显示在右下角；2. 点击扩展弹出二维码；3.支持调整二维码大小、支持控制网页右下角二维码显示隐藏",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "qrcode.min.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "options_page": "options.html"
}
